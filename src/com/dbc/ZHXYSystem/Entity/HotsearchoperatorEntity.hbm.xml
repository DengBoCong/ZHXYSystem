<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.dbc.ZHXYSystem.Entity.HotsearchoperatorEntity" table="hotsearchoperator" schema="zhxysystem">
        <id name="id">
            <column name="id" sql-type="int(11)" not-null="true"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="account">
            <column name="account" sql-type="varchar(100)" length="100"/>
        </property>
    </class>
</hibernate-mapping>