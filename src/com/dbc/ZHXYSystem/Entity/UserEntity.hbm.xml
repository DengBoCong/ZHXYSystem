<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.dbc.ZHXYSystem.Entity.UserEntity" table="user" schema="zhxysystem">
        <id name="account">
            <column name="account" sql-type="varchar(50)" length="50" not-null="true"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="address">
            <column name="address" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="phone">
            <column name="phone" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="image">
            <column name="image" sql-type="varchar(200)" length="200"/>
        </property>
        <property name="rank">
            <column name="rank" sql-type="varchar(10)" length="10"/>
        </property>
        <property name="numberOfFan">
            <column name="numberOfFan" sql-type="int(11)"/>
        </property>
        <property name="numberOfFollow">
            <column name="numberOfFollow" sql-type="int(11)"/>
        </property>
        <property name="profile">
            <column name="profile" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="signature">
            <column name="signature" sql-type="varchar(200)" length="200" />
        </property>
        <property name="electronicCurrency">
            <column name="electronicCurrency" sql-type="int(11)"/>
        </property>
        <property name="mutualAidIntegral">
            <column name="mutualAidIntegral" sql-type="int(11)" />
        </property>
        <property name="competitivePoint">
            <column name="competitivePoint" sql-type="int(11)" />
        </property>
    </class>
</hibernate-mapping>